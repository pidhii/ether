let pub require = __require in

let pub create_env defs =
  { defs
  , load = fn {defs} path -> __load path defs
  , load_stream = fn {defs} file -> __load_stream file defs
  , load_string = fn {defs} str -> __load_stream (__open_string str) defs
  }
in
let pub load path = __load path [] in
let pub load_stream file = __load_stream file [] in
let pub load_string str = __load_stream (__open_string str) [] in


let pub __fmt l =
  let rec loop l acc =
    if let x :: xs = l then
      let x = if string? x then x else format "%w" x in
      loop xs (x ++ acc)
    else acc
  in
  loop l ""
in


let pub record = lazy
  let {strcmp} = require 'string' in
  let {sort, mapi, map} = require 'list' in
  fn pairs ->
    -- sort pairs
    let pairs =
      pairs
      |> mapi (curry id)
      |> sort ((i, (a, _)) (j, (b, _)) ->
          let cmp = strcmp a b in
          if cmp < 0 then true
          else if cmp == 0 then i < j
          else false
      )
      |> map second
    in

    -- remove duplicate keys (leave the latest one) and construct a record
    let rec loop l acc =
      if let x :: xs = l then
        if acc is [] then
          -- accumulate first kv-pair
          loop xs [x]
        else if first x eq first (car acc) then
          -- replace previous kv-pair with the current one (collision of keys)
          loop xs (x :: cdr acc)
        else
          -- accumulate kv-pair
          loop xs (x :: acc)
      else
        __record acc
    in
    
    loop pairs []
in


let pub object typespec =
  let typename = typespec.name or "object" in
  let base = typespec.base in
  let methods = if let {methods} = typespec then list methods else [] in
  __make_usertype typename base methods
in


