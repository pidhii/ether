let pub require = __require in

let pub fn create_env defs =
  {
    defs
    fn load {defs} path = (__load path defs)
    fn load_stream {defs} file = (__load_stream file defs)
    fn load_string {defs} str = (__load_stream (__open_string str) defs)
  }
in
let pub fn load path = __load path [] in
let pub fn load_stream file = __load_stream file [] in
let pub fn load_string str = __load_stream (__open_string str) [] in


let pub fn __fmt l =
  let rec fn loop l acc =
    if let x :: xs = l then
      let x = if string? x then x else format "%w" x in
      loop xs (x ++ acc)
    else acc
  in loop l ""
in


let pub record = lazy
  let {strcmp} = require 'string' in
  let {sort, mapi, map} = require 'list' in
  fn pairs ->
    -- sort pairs
    let sortedPairs =
      pairs
      |> mapi (,)
      |> sort (fn ((i, (a, _)) as lhs) ((j, (b, _)) as rhs) ->
        let cmp = strcmp a b in
        if cmp < 0 then true
        else if cmp == 0 then i < j
        else false
      )
      |> map second
     in

    -- remove duplicate keys (leave the latest one) and construct a record
    let rec fn loop l acc =
      if let x :: xs = l then
        if acc is [] then
          -- accumulate first kv-pair
          loop xs [x]
        else if first x eq first (car acc) then
          -- replace previous kv-pair with the current one (collision of keys)
          loop xs (x :: cdr acc)
        else
          -- accumulate kv-pair
          loop xs (x :: acc)
      else
        __record acc
    in loop pairs []
in

